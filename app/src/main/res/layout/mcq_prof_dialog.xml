<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        >
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_chapter_q"
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:backgroundTint="@color/colorAccent"

            android:layout_marginLeft="100dp"
            ></Spinner>
        <Spinner
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:backgroundTint="@color/colorAccent"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_category_q"
            android:layout_marginLeft="30dp"

            android:layout_toRightOf="@id/spinner_chapter_q"
            ></Spinner>

        <EditText
            android:layout_below="@id/spinner_chapter_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Enter question"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:backgroundTint="@color/colorAccent"
            android:buttonTint="@color/colorAccent"

            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:id="@+id/edit_q_prof"
            ></EditText>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pdf_attach"
            android:layout_marginTop="20dp"
            android:layout_below="@id/spinner_chapter_q"
            android:layout_alignParentRight="true"
            android:id="@+id/img_q_prof">
        </ImageView>
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:hint="Option one"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:buttonTint="@color/colorAccent"

        android:textStyle="bold"
        android:id="@+id/edit_option_1"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:hint="Option two"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:buttonTint="@color/colorAccent"

        android:id="@+id/edit_option_2"
        ></EditText>
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingLeft="10dp"
    android:hint="Option three"
    android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:buttonTint="@color/colorAccent"

        android:textStyle="bold"
    android:id="@+id/edit_option_3"
    ></EditText>
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingLeft="10dp"
    android:hint="Option four"
    android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:buttonTint="@color/colorAccent"

        android:textStyle="bold"
    android:id="@+id/edit_option_4"
    ></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save options"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:background="@drawable/custom_button"
        android:id="@+id/btn_save_option"
        ></Button>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 1"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    android:backgroundTint="@color/colorAccent"
                    android:buttonTint="@color/colorAccent"

                    android:id="@+id/ch_op1"

                    ></CheckBox>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 2"
                    android:textStyle="bold"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    android:backgroundTint="@color/colorAccent"
                    android:buttonTint="@color/colorAccent"

                    android:id="@+id/ch_op2"
                    ></CheckBox>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 3"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:id="@+id/ch_op3"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    android:backgroundTint="@color/colorAccent"
                    android:buttonTint="@color/colorAccent"


                    ></CheckBox>

                <CheckBox
                    android:id="@+id/ch_op4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"
                    android:text="option 4"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    android:backgroundTint="@color/colorAccent"
                    android:buttonTint="@color/colorAccent"

                    android:textStyle="bold"></CheckBox>
            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>